@model MusicDemo.Website.ViewModels.AlbumViewModel

@{
    ViewBag.Title = "Create New Album";
}

<div class="page-header">
	<h1>
		<a href="@(Url.Action("Details", "Artist", routeValues: new { artistID = Model.ArtistID }))" class="btn btn-primary btn-sm">
			<span class="glyphicon glyphicon-chevron-left">
				<span class="sr-only">Back To Artist</span>
			</span>
		</a>
		<small>
			Album
		</small>
		Create New
	</h1>
</div>

@using (Html.BeginForm("Create", "Album", method: FormMethod.Post, htmlAttributes: new { @class = "form-horizontal" }))
{
    @Html.AntiForgeryToken()

	<fieldset class="well">
		@Html.ValidationSummary(true, "", new { @class = "alert alert-danger" })
		<div class="form-group">
			@Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label col-sm-3" })
			<div class="col-sm-9">
				@Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
				@Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
			</div>
		</div>
		<div class="form-group">
			<div class="col-sm-offset-3 col-sm-9">
				<input type="submit" value="Create" class="btn btn-primary" />
			</div>
		</div>
	</fieldset>

	@Html.HiddenFor(model => model.ArtistID)
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
